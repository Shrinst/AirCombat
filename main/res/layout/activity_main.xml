<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondojuegoairwar"
    tools:context="com.example.aguis.airwarcontroller20.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTextView"
        android:text="sbsnnssn"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnShoot"
        android:background="@drawable/animashootbutton"
        android:layout_below="@+id/tvTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:layout_editor_absoluteY="82dp"
        tools:layout_editor_absoluteX="354dp" />

    <Button
        android:layout_width="161dp"
        android:layout_height="152dp"
        android:id="@+id/btnPowerUp"
        android:background="@drawable/poweruobutton"
        tools:layout_editor_absoluteY="186dp"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error al Conectar con el Servidor"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

</android.support.constraint.ConstraintLayout>
