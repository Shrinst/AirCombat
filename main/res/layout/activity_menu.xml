<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inicioandroid2"
    tools:context="com.example.aguis.airwarcontroller20.Menu">

    <RelativeLayout
        android:layout_width="576dp"
        android:layout_height="295dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/btnStartGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startgame"
            android:onClick="changeToMainActivity"
            android:layout_marginLeft="107dp"
            android:layout_marginStart="107dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnStartGame"
            android:text="@string/help"
            android:onClick="changeToInstructions"
            android:layout_marginLeft="107dp"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
